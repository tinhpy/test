<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Đăng ký mới
      </h1>
      <% include ./partials/messages %>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <input type="text" id="firstName" name="firstName" placeholder="Họ" class="form-control">
          </div>
         <div class="form-group">
          <input type="text" id="surName" name="surName" placeholder="Tên" class="form-control">
        </div>
        <div class="form-group">
          <input type="email" id="loginName" name="loginName" placeholder="Email" class="form-control">
        </div>
        <div class="form-group">
          <input type="password" id="password" name="password" placeholder="Mật khẩu mới" class="form-control">
        </div>
        <div class="form-group">
                  <input type="password" id="rePassword" name="rePassword" placeholder="Nhập lại mật khẩu" class="form-control">
        </div>
        <div class="form-group">
          <label>Ngày sinh</label>
          <input type="date" id="birthday" name="birthday" value="1997-07-20" class="form-control">
        </div>
        <div class="form-group">
          <input type="radio" name="gender" id="female" value="Nữ" >Nữ
          <input type="radio" name="gender" id="male" value="Nam">Nam
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Đăng ký
        </button>
      </form>
      <p class="lead mt-4">Đã có tài khoản? <a href="/users/login">Đăng nhập</a></p>
    </div>
  </div>
</div>
